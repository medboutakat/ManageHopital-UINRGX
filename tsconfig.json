{

  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": false,
    "downlevelIteration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "paths": {
      "api-ai-javascript/*": ["node_modules/api-ai-javascript/es6/*"]
    },
    "typeRoots": [
      "node_modules/@types"
    ],

    "lib": [
      "es2018",
      "dom"
    ], 
    "resolveJsonModule": true,
    "esModuleInterop": true 
    // "paths": {
    //   "api-ai-javascript/*": ["node_modules/api-ai-javascript/es6/ApiAiClient"] //bypass the index.ts
    // } 
  }
}
